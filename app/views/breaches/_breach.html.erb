<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr><h3>Breach on <%= human_time(breach.time) %></h3> </tr>
    <tr>
        Type:   <%= breach.code_type.name %> --   
        Codes: <% breach.codes.each do |code| %>
            <%= code.name %>, 

            <% end %>
        
    </tr>
    
    <tr>
        <th>Person</th>
        <th>Contribution</th>
    </tr>
</thead>
<tbody>
    <% breach.contributions.each do |contribution| %>
    <tr>
        <td><a href="<%= person_url(contribution.person) %>"><%= contribution.person.name %></a></td>
        <td><%= contribution.text %></td>
    </tr>

    <% end %>
</tbody>
</table>
<div>
    <%= render partial: "breaches/stats", locals: {breach: breach} %>
</div>
