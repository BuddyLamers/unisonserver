<h1>Subject codes</h1>

<% if @codes.any? %>
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>Subject</th>
				<th>Code</th>
				<th>Year</th>
				<th>Code type</th>
				<th>Actions</th>
			</tr>
		</thead>
		
		<tbody>
			<% @codes.each do |code| %>
				<tr>
					<td><%= code.subject.andand.name %></td>
					<td><b><%= code.name %></b></td>
					<td><%= code.year %></td>
					<td><%= code.code_type.andand.name %></td>
					<td><%= link_to "Edit", edit_code_path(code) %> <%= link_to "Destroy", code, method: :delete, confirm: "Are you sure you would like to delete the code: #{code.name} and all of its related codes?" %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
	<p>We don't have any codes yet.</p>
<% end %>

<%= link_to "Create a new subject code", new_code_path %>