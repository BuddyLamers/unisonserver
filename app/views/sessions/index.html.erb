<% @title = "Sessions" %>
<h1>Unison Reading</h1>

<div class="commands">
  <a href="<%= new_session_url %>">Schedule a new Session</a>
</div>

<% if @sessions.any? %>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
    <th>Teacher</th>
    <th>Section</th>
    <th>Subject</th>
    <!-- <th>Code</th> -->
    <th>Time</th>
    <th>Length</th>
    <th>Completed?</th>
    <th>Actions</th>
    </tr>
  </thead>

<tbody>
    <%= render @sessions %>
</tbody>

</table>


<% end %>

<div class="past"></div>
<div class="upcoming"></div>

