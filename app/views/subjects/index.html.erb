<h1>Subjects</h1>

<% if @subjects.any? %>
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>Name</th>
				<th>Codes</th>
				<th>Actions</th>
			</tr>
		</thead>
		
		<% @subjects.each do |subject| %>
			<tbody>
				<tr>
					<td><%= subject.name %></td>
					<td><%= subject.codes.count %></td>
					<td><%= link_to "Edit", edit_subject_path(subject) %> <%= link_to "Destroy", subject, method: :delete, confirm: "Are you sure you would like to delete the subject: #{subject.name} and all of its related codes?" %></td>
				</tr>
			</tbody>
		<% end %>
	</table>
<% else %>
	<p>We don't have any subjects yet.</p>
<% end %>

<%= link_to "Create a new subject", new_subject_path %>	