<%= form_for @user do |f| %>
  <%= render partial: 'layouts/form_errors', locals: {instance: @user} %>

  <fieldset>
    <%= f.label :person_id, "Teacher" %>
    <%= f.collection_select :person_id, Teacher.all, :id, :name, include_blank: 'No Teacher' %>
  </fieldset>

  <fieldset>
    <%= f.label :email, "Email Address" %>
    <%= f.text_field :email %>
  </fieldset>

  <fieldset>
    <%= f.label :password, "Password" %>
    <%= f.text_field :password %>
  </fieldset>

  <fieldset>
    <%= f.label :password_confirmation, "Confirm Password" %>
    <%= f.text_field :password_confirmation %>
  </fieldset>

  <fieldset>
    <%= f.label :role, "Role" %>
    <%= f.select :role, User::ROLES %>
  </fieldset>

  <fieldset>
    <%= f.submit %>
  </fieldset>
<% end %>
