<h1>Teachers</h1>

<% if @teachers.any? %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
				<th>Email</th>
				<th>Role</th>
        <th>First</th>
        <th>Last</th>
        <th>School</th>
        <th>Last Updated</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
	    <% @teachers.each do |teacher| %>
        <tr>
					<td><%= teacher.user.email %></td>
					<td><%= teacher.user.role %></td>
					<td><%= teacher.fname %></td>
					<td><%= teacher.lname %></td>
					<td><%= teacher.school %></td>
					<td><%= teacher.updated_at %></td>
					<td>
						<%= link_to 'Edit', edit_teacher_path(teacher) %>
						<%= link_to 'Delete', teacher, confirm: 'Are you sure?', method: :delete %>
					</td>
        </tr>
	    <% end %>
    </tbody>
  </table>
 <% else %>
 	<p>No teachers at the moment.</p>
 <% end %>

<p><%= link_to "Register a new teacher", new_teacher_path %></p>