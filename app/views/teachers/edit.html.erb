<section class="edit col">
	<h1>Edit Teacher</h1>
  <%= render partial: "form" %>
</section><!-- .edit -->

<section class="teacher-students col">
  <%= form_for @teacher, html: {class: "row-selector"} do |f| %>
    <div class="selector-column">
      <div class="teacher-student-title">Students</div>
      <div><span class="remove-all btn">Remove All</span></div>
      <div class="teacher_student_list selected" data-name="teacher[student_ids]">
        <% @teacher.students.each do |student| %>
          <div class="row student student-<%= student.id %>" data-id="<%= student.id %>"><%= student.name %></div>
        <% end %>
      </div>
    </div>

    <div class="selector-column">
      <div class="teacher-student-title">All Students</div>
      <div><span class="add-all btn">Add All</span></div>
      <div><input type="search" class="search-deselected" placeholder="search" /></div>
      <div class="all_students_list deselected">
        <% Student.all.each do |student| %>
          <div class="row student student-<%= student.id %>" data-id="<%= student.id %>"><%= student.name %></div>
        <% end %>
      </div>
    </div>
  <% end %>
</section>
